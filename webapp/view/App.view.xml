<mvc:View
   controllerName="sap.ui.iba.practic.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true" >
   <App class="sapUiDemoWT">
      <Table id="idPhoneTable"
         inset="false"
         items="{
         path : 'phone>/Phones'}">
         <headerToolbar>
            <Toolbar>
               <Title text="{i18n>phoneTableTitle}" level="H2"/>
               <ToolbarSpacer/>
               <SearchField width="50%" search="onFilterPhones"/>
            </Toolbar>
         </headerToolbar>
         <columns>
            <Column
               width="12em">
               <Text text="Mark" />
            </Column>
            <Column
               minScreenWidth="Tablet"
               demandPopin="true">
               <Text text="Model" />
            </Column>
            <Column
               minScreenWidth="Tablet"
               demandPopin="true"
               hAlign="Left">
               <Text text="Operating system" />
            </Column>
            <Column
               minScreenWidth="Tablet"
               demandPopin="true"
               hAlign="Left">
               <Text text="Version" />
            </Column>
            <Column
               hAlign="Left">
               <Text text="Color" />
            </Column>
            <Column
               hAlign="Right">
               <Text text="Price" />
            </Column>
         </columns>
         <items>
            <ColumnListItem>
               <cells>
                  <ObjectIdentifier
                     title="{phone>Mark}"
                     />
                  <Text
                     text="{phone>Model}" />
                  <Text
                     text="{phone>Operating system}" />
                  <Text
                     text="{phone>Version}" />
                  <Text
                     text="{phone>Color}" />
                  <ObjectNumber
                     number="{
                        parts: [{path: 'phone>Price'}, {path: 'view>/currency'}],
                        type: 'sap.ui.model.type.Currency',
                        formatOptions: { showMeasure: false }
                     }" 
                     unit="{view>/currency}"
                     state="{= ${phone>Price} > 1000 ? ${phone>Price} > 2000 ? 'Error' : 'Warning' : 'Success' }"/>
               </cells>
            </ColumnListItem>
         </items>
      </Table>
   </App>
</mvc:View>