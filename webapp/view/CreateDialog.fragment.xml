<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      contentWidth="40%"
      title="{i18n>create}"
      class="dialog">
      <content>
         <InputListItem label="{i18n>mark}">
            <Input
               placeholder="{i18n>mark}"
               value="{newPhone>/Mark}"
               type="Text" />
         </InputListItem>
         <ToolbarSpacer/>
         <InputListItem label="{i18n>model}">
            <Input
               placeholder="{i18n>model}"
               value="{newPhone>/Model}"
               type="Text" />
         </InputListItem>
         <ToolbarSpacer/>
         <InputListItem label="{i18n>operatingSystem}">
            <Input
               placeholder="{i18n>operatingSystem}"
               value="{newPhone>/Operating_system}"
               type="Text" />
         </InputListItem>
         <ToolbarSpacer/>
         <InputListItem label="{i18n>version}">
            <Input
               placeholder="{i18n>version}"
               value="{newPhone>/Version}"
               type="Text" />
         </InputListItem>
         <ToolbarSpacer/>
         <InputListItem label="{i18n>price}">
            <Input
               placeholder="{i18n>price}"
               value="{newPhone>/Price}"
               type="Text" />
         </InputListItem>
      </content>      
      <beginButton>
         <Button
            icon="sap-icon://create"
            type="Accept"
            text="{i18n>dialogCrateOk}"
            press="onCloseDialogOk"/>
      </beginButton>
      <endButton>
         <Button
            icon="sap-icon://cancel"
            type="Accept"
            text="{i18n>dialogCrateCancel}"
            press="onCloseDialogCancel"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>