<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="Create"
      class="dialog">
      <content>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Mark:"/>
         <Input
               value="{newPhone>/Mark}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Model:"/>
         <Input
               value="{newPhone>/Model}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Operating system:"/>
         <Input
               value="{newPhone>/Operating_system}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Version:"/>
         <Input
               value="{newPhone>/Version}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Price:"/>
         <Input
            type="Number"  
            value="{newPhone>/Price}"
            valueLiveUpdate="true"
            width="50%"/>
      </content>      
      <beginButton>
         <Button
            icon="sap-icon://create"
            type="Accept"
            text="{i18n>dialogCrateOk}"
            press="onCloseDialogOk"/>
      </beginButton>
      <endButton>
         <Button
            icon="sap-icon://cancel"
            type="Accept"
            text="{i18n>dialogCrateCancel}"
            press="onCloseDialogCancel"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>