<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.ui.iba.practic.controller.Info"
	xmlns="sap.m">
	<Page
		title = "{i18n>info}"
		showNavButton="true"
		navButtonPress="onNavBack">
		<content>
			<l:Grid
				class="sapUiSmallMarginTop"
				hSpacing="2"
				defaultSpan="L6 M6 S10">
				<l:content>
					<Image src="https://pp.userapi.com/c841428/v841428952/4b6df/rM9HmrRhWlI.jpg" width="100%">
						<layoutData>
							<l:GridData
								span="L3 M3 S8"
								linebreakL="true"
								linebreakM="true"
								linebreakS="true" />
						</layoutData>
					</Image>
					<VBox>
						<Text text="{i18n>name}" class="nameTitle" />
						<Text text="{i18n>description}" />
					</VBox>	
				</l:content>
			</l:Grid>
        </content>
	</Page>
</mvc:View>
