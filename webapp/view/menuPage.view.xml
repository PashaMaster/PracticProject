<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="sap.ui.iba.practic.controller.menuPage">
	<Page
		title = "IBA practic project">
		<headerContent>
			<Select
				id="language"
				forceSelection="false"
				change="getI18N">
				<core:Item key="ru" text="{i18n>ru}"/>
				<core:Item key="en" text="{i18n>en}"/>
			</Select>
		</headerContent>
		<FlexBox
			alignItems="Start"
			justifyContent="SpaceAround"
			backgroundDesign = "Transparent">
			<items>
				<Button 
					class = "notBorder"
					text="{i18n>contacts}"
					press="goToContact"/>
				<Button 
					text="{i18n>info}"
					press="goToInfo"/>
				<Image src="http://iba.by/kcfinder/upload/images/news/new-ofice-gomel/2.jpg"/>
				<Button 
					text="{i18n>galary}"
					press="goToGalary"/>
				<Button 
					text="{i18n>table}"
					press="goToTable"/>				
			</items>
		</FlexBox>
	</Page>
</mvc:View>