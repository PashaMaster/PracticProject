<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      contentWidth="40%"
      title="{i18n>update}"
      class="dialog">
      <content>
         <InputListItem label="{i18n>mark}">
            <Input
               placeholder="{i18n>mark}"
               value="{upPhone>/Mark}"
               type="Text" />
         </InputListItem>
         <ToolbarSpacer/>
         <InputListItem label="{i18n>model}">
            <Input
               placeholder="{i18n>model}"
               value="{upPhone>/Model}"
               type="Text" />
         </InputListItem>
         <ToolbarSpacer/>
         <InputListItem label="{i18n>operatingSystem}">
            <Input
               placeholder="{i18n>operatingSystem}"
               value="{upPhone>/Operating_system}"
               type="Text" />
         </InputListItem>
         <ToolbarSpacer/>
         <InputListItem label="{i18n>version}">
            <Input
               placeholder="{i18n>version}"
               value="{upPhone>/Version}"
               type="Text" />
         </InputListItem>
         <ToolbarSpacer/>
         <InputListItem label="{i18n>price}">
            <Input
               placeholder="{i18n>price}"
               value="{upPhone>/Price}"
               type="Text" />
         </InputListItem>
      </content>      
      <beginButton>
         <Button
            icon="sap-icon://synchronize"
            type="Accept"
            text="{i18n>dialogUpdateOk}"
            press="onUpdateAndCloseDialog"/>
         
      </beginButton>
      <endButton>
         <Button
            icon="sap-icon://cancel"
            type="Accept"
            text="{i18n>dialogUpdateCancel}"
            press="onCloseDialog"/>         
      </endButton>
   </Dialog>
</core:FragmentDefinition>