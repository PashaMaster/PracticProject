<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="Update"
      class="dialog">
      <content>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Mark:"/>
         <Input
               value="{path: 'phone>/Phones/1/Mark'}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Model:"/>
         <Input
               value="{phone>/Phones/1/Mark}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Operating system:"/>
         <Input
               value="{view>/currency}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Version:"/>
         <Input
               value=""
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Color:"/>
         <Input
               value=""
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Price:"/>
         <Input
               value=""
               valueLiveUpdate="true"
               width="50%"/>
      </content>      
      <beginButton>
         <Button
            icon="sap-icon://accept"
            type="Accept"
            text="{i18n>dialogCloseButtonText}"
            press="onCloseDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>