<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="Update"
      class="dialog">
      <content>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Mark:"/>
         <Input
               value="{upPhone>/Mark}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Model:"/>
         <Input
               value="{upPhone>/Model}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Operating system:"/>
         <Input
               value="{upPhone>/Operating_system}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Version:"/>
         <Input
               value="{upPhone>/Version}"
               valueLiveUpdate="true"
               width="50%"/>
         <ToolbarSpacer/>
         <Label 
            class="label"
            text = "Price:"/>
         <Input
               type="Number"
               value="{upPhone>/Price}"
               valueLiveUpdate="true"
               width="50%"/>
      </content>      
      <beginButton>
         <Button
            icon="sap-icon://synchronize"
            type="Accept"
            text="{i18n>dialogUpdateOk}"
            press="onUpdateAndCloseDialog"/>
         
      </beginButton>
      <endButton>
         <Button
            icon="sap-icon://cancel"
            type="Accept"
            text="{i18n>dialogUpdateCancel}"
            press="onCloseDialog"/>         
      </endButton>
   </Dialog>
</core:FragmentDefinition>